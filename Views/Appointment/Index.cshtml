
@model IEnumerable<Hospital2.Models.Appointment>
<h1>Appointments</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Section</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AID</td>
                <td>@appointment.Section</td>
                <td>@appointment.Name</td>
                <td>@appointment.Gender</td>
                <td>@appointment.Mobile</td>
                <td>@appointment.Email</td>
                <td>@appointment.Date</td>
                <td>
                    <a href="@Url.Action("Edit", "Appointment", new { id = appointment.AID })">Edit</a> |
                    <a href="@Url.Action("Details", "Appointment", new { id = appointment.AID })">Details</a> |
                    <a href="@Url.Action("Delete", "Appointment", new { id = appointment.AID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
