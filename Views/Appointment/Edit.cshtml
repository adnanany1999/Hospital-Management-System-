@model Hospital2.Models.Appointment

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AID" />
    <div class="form-group">
        <label asp-for="Section">Section</label>
        <select asp-for="Section" asp-items="Html.GetEnumSelectList<SectionType>()"></select>
    </div>
    <!-- Repeat similar form-group divs for other properties -->
    <button type="submit">Save Changes</button>
</form>
