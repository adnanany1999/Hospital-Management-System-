@model Hospital2.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<h2>Appointment Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.AID</dd>

        <dt class="col-sm-2">Section</dt>
        <dd class="col-sm-10">@Model.Section</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Mobile</dt>
        <dd class="col-sm-10">@Model.Mobile</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

